h1= 'Sign Up'
form#sign-up-form(class='user-form' method='POST' action='/sign-up')
    div 
        label(for='s_username') Username (3-20 alphanumeric characters)*: 
        div #{errs && errs.s_username ? errs.s_username: null}
        input#s_username(type='text', placeholder='Username' name='s_username' maxlength='30' required='true' value=username ? username : none)
    
    div 
        label(for='s_email') Email*:
        div #{errs && errs.s_email ? errs.s_email: null}
        input#s_email(type='email', placeholder='Email' name='s_email' maxlength='100' required='true' value=email ? email : none)

    div 
        label(for='s_password') Password (6-20 characters)*:
        div #{errs && errs.s_password ? errs.s_password: null}
        input#s_password(type='password', placeholder='Password' name='s_password' maxlength='20' minlength='6' required='true')

    div
        
        label(for='s_password_confirm') Confirm Password*:
        div.form-error #{errs && errs.s_password_confirm ? errs.s_password_confirm: null }
        input#s_password_confirm(type='password', placeholder='Confirm Password' name='s_password_confirm' minlength='6' maxlength='20' required='true')
    div.form-btn
        if !signUpPg
            div
                button(type='submit') Sign Up 

            div 
                button(id='sign-up-cancel') Cancel
        else 
            button(type='submit') Sign Up 
            a(class='btn-link' href='/') Cancel

if !signUpPg
    a(href="/" id="change-to-login") Already Have an Account? Login
else 
    a.form-link(href="/login" ) Already Have an Account? Login
