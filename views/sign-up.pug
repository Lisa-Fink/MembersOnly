div.modal-x
    span.material-symbols-outlined#sign-up-x close

h1= 'Sign Up'
form(class='user-form' method='POST' action='')
    div 
        label(for='username') Username*:
        input#username(type='text', placeholder='Username' name='username' maxlength='30' required='true')
    
    div 
        label(for='email') Email*:
        input#email(type='email', placeholder='Email' name='email' maxlength='100' required='true')

    div 
        label(for='password') Password (6-20 characters)*:
        input#password(type='password', placeholder='Password' name='password' maxlength='20' required='true')

    div 
        label(for='password-confirm') Confirm Password*:
        input#password-confirm(type='password', placeholder='Confirm Password' name='password-confirm' maxlength='20' required='true')
    div.form-btn
        div
            button(type='submit') Sign Up 

        div 
            button(id='sign-up-cancel') Cancel

a(href="/" id="change-to-login") Already Have an Account? Login



